<!--views/cliente/dashboard.ejs-->
<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1><%= title %></h1>

    <!-- Безопасный вывод имени и email с проверками -->
    <h1 id="saludo" data-nombre="<%= user.nombre %>"></h1>

    <% if (user.fotoPerfil) { %>
        <img src="<%= user.fotoPerfil %>" alt="Foto de perfil" style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; margin-bottom: 10px;">
        <% } else { %>
            <p>No tienes foto de perfil aún.</p>
        <% } %>

    <p><%= user.nombre %> (<%= user.email %>)</p>

    <p><a href="/auth/logout">Cerrar</a></p>

    <h2>Sus funciones:</h2>
    <ul>
        <li><a href="/client/perfil">Mi Perfil</a></li>
        <li><a href="/client/productos">Ver catálogo de productos</a></li>
        <li><a href="/client/mis-pedidos">Mis pedidos</a></li>
        <li><a href="/client/mensajes/nuevo">Escribir al soporte técnico</a></li>
    </ul>

    <script src="/js/main.js"></script>
</body>
</html>