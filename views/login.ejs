<!--views/login.ejs-->
<div class="form-container">
    <h1><%= title %></h1>

    <% if (typeof errors !== 'undefined') { %>
        <div class="alert error">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form action="/auth/login" method="POST" class="styled-form">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" required class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Contraesña:</label>
            <input type="password" id="password" name="password" required class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Iniciar sesion</button>
    </form>
    <p class="form-link">¿No tiene una cuenta? <a href="/auth/register">Registrarse</a></p>
</div>