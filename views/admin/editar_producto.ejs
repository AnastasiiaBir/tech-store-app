<!--views/admin/editar_producto.ejs-->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <form action="/admin/productos/editar/<%= producto.id %>" method="POST" enctype="multipart/form-data">
    <label>Nombre:</label>
    <input type="text" name="nombre" value="<%= producto.nombre %>" required><br>

    <label>Descripción:</label>
    <input type="text" name="descripcion" value="<%= producto.descripcion %>"><br>

    <label>Precio (€):</label>
    <input type="number" step="0.01" name="precio" value="<%= producto.precioUnitario %>" required><br>

    <label>Stock:</label>
    <input type="number" name="stock" value="<%= producto.stock %>"><br>

    <label>Imagen actual:</label><br>
    <% if (producto.imagenUrl) { %>
        <img src="/uploads/<%= producto.imagenUrl %>" width="150" alt="Imagen de <%= producto.nombre %>"><br>
    <% } else { %>
        —<br>
    <% } %>

    <label>Cambiar imagen:</label>
    <input type="file" name="imagen" accept="image/*"><br>

    <button type="submit">Guardar Cambios</button>
  </form>

  <p><a href="/admin/productos">← Volver a productos</a></p>
</body>
</html>